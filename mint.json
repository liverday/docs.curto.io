{
  "$schema": "https://mintlify.com/schema.json",
  "name": "curto.io",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.png",
  "colors": {
    "primary": "#9FF5C0",
    "light": "#8CF3B4",
    "dark": "#0E823A",
    "background": {
      "dark": "#111"
    }
  },
  "modeToggle": {
    "default": "dark",
    "isHidden": true
  },
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://curto.io/dashboard"
  },
  "tabs": [
    {
      "name": "Referência da API",
      "url": "api-reference"
    }
  ],

  "primaryTab": {
    "name": "Documentação"
  },
  "navigation": [
    {
      "group": "Comece agora!",
      "pages": ["getting-started/introduction", "getting-started/quickstart"]
    },
    {
      "group": "Aprenda mais",
      "pages": ["learn-more/domains", "learn-more/microsites", "learn-more/ab-testing"]
    },
    {
      "group": "Integrações",
      "pages": ["integrations/zapier", "integrations/hubspot", "integrations/ifttt"]
    },
    {
      "group": "Documentação da API",
      "pages": ["api-reference/authentication"]
    },
    {
      "group": "Links",
      "pages": [
        "api-reference/links/get",
        "api-reference/links/create",
        "api-reference/links/delete"
      ]
    }
  ],
  "footerSocials": {
    "twitter": "https://twitter.com/curto_io",
    "linkedin": "https://www.linkedin.com/company/curto-io"
  },
  "backgroundImage": "/background.png",
  "api": {
    "playground": {
      "mode": "hide"
    }
  }
}
